{
	"name": "@untemps/user-media-utils",
	"version": "1.0.1",
	"description": "Collection of utility functions to manage user media permissions",
	"main": "dist/index.js",
	"repository": "git@github.com:untemps/user-media-utils.git",
	"keywords": [
		"utils",
		"media",
		"devices",
		"permissions",
		"javascript"
	],
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@babel/core": "^7.9.6",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@untemps/event-dispatcher": "^1.1.0",
		"babel-jest": "^26.0.1",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"parcel-bundler": "^1.12.4",
		"prettier": "^2.0.5",
		"semantic-release": "^17.0.7"
	},
	"jest": {
		"testPathIgnorePatterns": [
			".+Mock.js"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test:ci && yarn prettier"
		}
	},
	"release": {
		"branches": [
			"master"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"scripts": {
		"test": "jest -u --watch",
		"test:ci": "CI=true jest -u -b",
		"build": "parcel build src/index.js",
		"prettier": "prettier \"*/**/*.js\" --ignore-path ./.prettierignore --write"
	}
}
